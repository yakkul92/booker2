<main>

  <div>
    <%= flash[:notice] %>
  </div>

  <div class="container px-5 px-sm-0">
    <div class="row">
    
      <div class="col-md-3">
        <h2>User Info</h2>
        
        <%= image_tag current_user.get_profile_image(100, 100) %>
        
        <!--<% @books.each do |book| %>-->
        <!--<div>-->
        <!--<%= image_tag book.get_image %>-->
        <!--</div>-->
        <!--<% end %>-->

        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= current_user.introduction %></th>
            </tr>
          </tbody>
        </table>

        <div class="row">
          <%= link_to 'icon', edit_user_path(current_user.id), class: "btn btn-secondary btn-block" %>
        </div>
        
        <h2 class="mt-3">New book</h2>
          <%= form_with model: @book do |f| %>
            <div class="form-group">
              <label for="book_title">Title</label>
              <div>
              <%= f.text_field :title %>
              </div>
            </div>
            <div class="form-group">
              <label for="book_body">Opinion</label>
              <div>
              <%= f.text_field :body %>
              </div>
            </div>   
            <div class="form-group">
              <%= f.submit 'Create Book' %>
            </div>     
          <% end %>
      </div>



  
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
              <td><%= link_to book.title, book %></td>
              <td><%= book.body %></td> 
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>