<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
          <%= form_with model: @book do |f| %>
            <div class="form-group">
              <label for="book_title">Title</label>
              <div>
              <%= f.text_field :title %>
              </div>
            </div>
            <div class="form-group">
              <label for="book_body">Opinion</label>
              <div>
              <%= f.text_field :body %>
              </div>
            </div>   
            <div class="form-group">
              <%= f.submit 'Update Book' %>
            </div>     
          <% end %>        
      </div>
    </div>
  </div>
