<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <%= form_with model: @User do |f| %>
        <div class="form_group">
          <label for="user_name">Name</label>
          <div>
            <%= f.text_field :name, autofocus: true, id:"inputname", class:'form-control user_name'%>
          </div>
        </div>
        <div class="form_group">
          <label for="user_image">Image</label>
          <div>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          </div>
        </div>
        <div class="form_group">
          <label for="user_introduction">Introduction</label>
          <div>
            <%= f.text_area :introduction, class:'form-control user_introduction'%>
          </div>
        </div>
        <div class="form_group">
          <%= f.submit 'Update User', class:'btn btn-secondary' %>
        </div>
      <% end %>
        
    </div>
  </div>
</div>