<div class="container">

  <% if @user.errors.any? %>
  <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
    
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>

      <%= form_with model: @user do |f| %>

        <div class="form_group">
          <label for="user_name">Name</label>
          <div>
            <%= f.text_field :name, class:'form-control user_name'%>
          </div>
        </div>
        <div class="form_group">
          <label for="user_image">Image</label>
          <div>
            <%= f.file_field :profile_image, accept: "image/*" %>
          </div>
        </div>
        <div class="form_group">
          <label for="user_introduction">Introduction</label>
          <div>
            <%= f.text_area :introduction, class:'form-control user_introduction'%>
          </div>
        </div>
        <div class="form_group">
          <%= f.submit 'Update User', class:'btn btn-secondary' %>
        </div>

      <% end %>
        
    </div>
  </div>
</div>